@using vlko.BlogModule.Commands.ViewModel
@model FileViewModel
@{
	ViewBag.Title = "File delete";
	
	Html.ScriptInclude("~/Scripts/Grid.js");
}
<div class="ajax_ignore">
	@Html.Link("back", "Back to List", (object)Routes.IndexOfThisFromThis) 
</div>

<h2>File delete</h2>

<div>
	@Html.ValidationSummary(true)

	<h3>Are you sure you want to delete this?</h3>
<fieldset>
	<legend>Fields</legend>
		@Html.DisplayFor(model => model.Ident)
		@Html.DisplayFor(model => model.Url)
		@Html.DisplayFor(model => model.Size)
	</fieldset>
</div>
@using (Html.BeginForm()) { 
	<div class="actions">
		@Html.HiddenFor(model => Model.Ident)	
		<input type="submit" class="btn primary" value="Delete" />
	</div>
} 


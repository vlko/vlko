@using vlko.BlogModule.Commands.CRUDModel
@model RssFeedCRUDModel
@{
	ViewBag.Title = "Delete";
}
<div class="ajax_ignore">
	@Html.Link("back", "Back to List", (object)Routes.IndexOfThisFromThis)
</div>

<h2>Delete</h2>

<div>
	@Html.ValidationSummary(true)

	<h3>Are you sure you want to delete this?</h3>
	<fieldset>
		<legend>Fields</legend>

		@Html.DisplayFor(model => model.Id)
		@Html.DisplayFor(model => model.Name)
		@Html.DisplayFor(model => model.Url)
		@Html.DisplayFor(model => model.AuthorRegex)
		@Html.DisplayFor(model => model.GetDirectContent)
		@Html.DisplayFor(model => model.DisplayFullContent)
		@Html.DisplayFor(model => model.ContentParseRegex)

	</fieldset>
</div>
@using (Html.BeginForm()) {
	<div class="actions">
		@Html.HiddenFor(model => Model.Id)
		<input type="submit" class="btn primary" value="Delete" />
	</div>
}


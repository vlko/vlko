@model StaticTextCRUDModel
@using vlko.BlogModule.Commands.CRUDModel
@using vlko.web.Areas.Admin.Controllers;
@{
	ViewBag.Title = "Details";
}
<div class="ajax_ignore">
	@Html.Link("back", "Back to List", (object)Routes.IndexOfThisFromThis) 
</div>

<h2>Details</h2>

<div>
	<fieldset>
		<legend>Fields</legend>
		
		@Html.DisplayFor(model => model.Id) 
		@Html.DisplayFor(model => model.FriendlyUrl)
		@Html.DisplayFor(model => model.Title)
		@Html.DisplayFor(model => model.Text)
		@Html.DisplayFor(model => model.ChangeDate)
		@Html.DisplayFor(model => model.PublishDate)
		@Html.DisplayFor(model => model.AllowComments)
		
	</fieldset>
</div>
<div class="ajax_ignore">
	@(Html.Link("Edit", (object)Routes.EditOfThisFromThis(Model.Id)))
</div>
